<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>User Mapping</title>
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<!-- <link rel="shortcut icon" href="img/logo/favicon.ico"> -->


<!-- Bootstrap CSS -->
<link rel="stylesheet" href="/stylesheets/bootstrap.css">

<!-- local style css -->
<link rel="stylesheet" href="/stylesheets/navbar.css">
<link rel="stylesheet" href="/stylesheets/index.css">

</head>
<body>
<div class="wrapper d-flex align-items-stretch">
<%- include("./partials/_menu.ejs",{userId:userId,userType:userType,username:username,userImg:userImg}) %>
<div class="add-update section">
	<div style="
	width:100%;
	display: flex;
	justify-content: center;
	padding: 2rem;">
		<div>
			<h4 class="h4"> UPDATE <span>USER MAPPING</span></h4>
			<form style="margin-left: 20rem;box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);padding: 5rem;" id="mapping_form" action="/mapping_up_post" method="post">
				<% mapList.forEach(function(map){ %>
				<input type="hidden" name="_csrf-backend" value="lMFvBr9BvDuVt3KbMU7QH2032ayJFXWy0fy-7ugetLfu8yo23jL0X9qEIMt2F7ROWlao2sVhR_O3le6MolPu8Q==">
				<input type="hidden" name="relId" value="<%= map.USRREL_ID %>">
					<div class="col-12">
						<div class="form-group">
							<label for="edit-dltId">Dealer/Distributor</label>
							<select class="form-control" id="edit-dltId" name="dltId" placeholder="Dealer/Distributor" required>

								<option value="<%= map.dlt_user_id %>" selected><%= map.dlt_fname %> <%= map.dlt_lname %></option>
								<% dltList.forEach(function(dlt){ %>
									<option value="<%= dlt.USER_ID %>"><%= dlt.FIRSTNAME %> <%= dlt.LASTNAME %></option>
									<% }); %>
							</select>
						</div>
					</div>
					<div class="col-12">
						<div class="form-group">
							<label for="edit-seId">Sales Executive</label>
							<select class="form-control" id="edit-seId" name="seId" placeholder="Sales Executive" required>
								<option value="<%= map.se_user_id %>" selected><%= map.se_fname %> <%= map.se_lname %></option>
								<% seList.forEach(function(se){ %>
									<option value="<%= se.USER_ID %>"><%= se.FIRSTNAME %> <%= se.LASTNAME %></option>
									<% }); %>
							</select>
						</div>
					</div>
					<div class="col-12">
						<% if (userType == 'HOD' || userType == 'A') { %>
						<button type="submit" class="btn btn-success">SAVE</button>
						<% } %>
					</div>
				<% }); %>
			</form>
		</div>
	</div>
</div>
</div>

<script src="/javascripts/fontawwesome.js"></script>
<!-- jQuery -->
<script src="/javascripts/jquery.min.js"></script>
<!-- Popper.js -->
<script src="/javascripts/popper.js"></script>
<!-- Bootstrap JS -->
<script src="/javascripts/bootstrap.js"></script>
<script src="/javascripts/main.js"></script>
<!-- <script src="/javascripts/vii.js"></script> -->
<!-- app -->
<script src="/javascripts/app.js"></script>
</body>
</html>
